@model CustomersTask.Models.customer

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .radio-group {
        padding: 10px 25px;
        border: 3px solid #4b4b4b;
        border-radius: 10px;
        position: relative;
        margin-top: 20px;
    }
    .cust {
        display: block;
        position: absolute;
        top: -19px;
        background-color: white;
        padding: 4px 5px;
    }
    .form-check {
        display: inline-block !important;
        margin-left: 15px;
    }
</style>

<h1>Add Customer</h1>
<hr />
<div class="row" style="margin-left: auto; margin-right: auto; ">
    <div class="col-md-10">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="phone" class="control-label"></label>
                <input asp-for="phone" class="form-control" />
                <span asp-validation-for="phone" class="text-danger"></span>
            </div>
            <div class="form-group radio-group">
                <label asp-for="Gender" class="control-label cust"></label>
                <div class="form-check">
                    <input asp-for="Gender" class="form-check-input" type="radio" value="male" checked />
                    <label class="form-check-label" for="Gender">
                        Male
                    </label>
                </div>
                <div class="form-check">
                    <input asp-for="Gender" class="form-check-input" type="radio" value="female" />
                    <label class="form-check-label" for="Gender">
                        Female
                    </label>
                </div>
            </div>
            <div class="form-group radio-group">
                <label asp-for="stateMarried" class="control-label cust">Married State</label>
                <div class="form-check">
                    <input asp-for="stateMarried" class="form-check-input" type="radio" value="unmarried" checked />
                    <label class="form-check-label" for="stateMarried">
                        UnMarried
                    </label>
                </div>
                <div class="form-check">
                    <input asp-for="stateMarried" class="form-check-input" type="radio" value="married" />
                    <label class="form-check-label" for="stateMarried">
                        Married
                    </label>
                </div>
                <span asp-validation-for="stateMarried" class="text-danger"></span>
            </div>
            <partial name="_CountryPartialView" />
            <div class="form-group">
                <label asp-for="governmentId" class="control-label"></label>
                <select asp-for="governmentId" class="form-control" asp-items="ViewBag.governmentId" id="governmentId"></select>
            </div>
            <div class="form-group">
                <label asp-for="street" class="control-label"></label>
                <input asp-for="street" class="form-control" />
                <span asp-validation-for="street" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-primary">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
